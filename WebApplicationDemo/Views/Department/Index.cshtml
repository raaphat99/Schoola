@model IEnumerable<Department>;

@{
    Layout = "_myLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Manager</th>
                <th scope="col">Courses</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dept in @Model) {
                <tr>
                    <th scope="row">@dept.ID</th>
                    <td>@dept.Name</td>
                    <td>@dept.ManagerName</td>
                    <td><a class="btn btn-info" asp-controller="department" asp-action="courses" asp-route-id="@dept.ID">Courses</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
